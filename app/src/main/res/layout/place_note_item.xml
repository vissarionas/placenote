<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/place_note_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/background"
        android:gravity="end"
        android:orientation="horizontal"
        android:weightSum="2"
        android:elevation="5dp">

        <ImageButton
            android:id="@+id/list_item_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_weight="0.1"
            android:background="@android:color/white"
            android:src="@drawable/ic_dots_menu" />

        <LinearLayout
            android:id="@+id/list_item_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/placeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:text="Place"
                android:textSize="18dp" />

            <View style="@style/Divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1.9"
                    android:id="@+id/noteText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text="nothing noted"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_gravity="center|end"
                    android:id="@+id/wifi_usage_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/wifi_usage" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>