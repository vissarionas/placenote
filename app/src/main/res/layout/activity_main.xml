<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/freshCutDayWhite">

    <TextView
        android:layout_margin="15dp"
        android:id="@+id/no_places_tv"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/handsOnDarkGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"/>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:numColumns="2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/place_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_add"
        android:tint="@color/freshCutDayWhite"
        android:id="@+id/add_place_floating_action_button"
        android:layout_gravity="bottom|right"
        android:layout_margin="15dp"
        app:backgroundTint="@color/freshCutDayLightGreen"
        app:fabSize="normal"
        app:elevation="5dp" />

</FrameLayout>