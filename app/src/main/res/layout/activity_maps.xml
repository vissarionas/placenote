<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/freshCutDayWhite"
        android:weightSum="3">

        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:layout_margin="2dp">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.abubaca.viss.placenote.MapActivity" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="2.6"
            android:orientation="vertical">

            <Button
                android:textSize="19sp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:gravity="center"
                android:drawableEnd="@drawable/add"
                android:drawableRight="@drawable/add"
                android:drawablePadding="4dp"
                android:textColor="@android:color/white"
                android:background="@color/freshCutDayLightGreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_place_btn"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/pb_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center">


        <ProgressBar
            android:id="@+id/location_status_pb"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Small" />

        <TextView
            android:id="@+id/location_status_tv"
            android:textSize="21sp"
            android:gravity="center"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/getting_location" />


    </LinearLayout>
</FrameLayout>

